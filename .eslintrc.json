{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": ["@codeyourfuture/standard"],
	"parser": "babel-eslint",
	"rules": {
		"indent": ["error", true],
		"operator-linebreak": "off"
	},
	"overrides": [
		{
			"files": ["setupTests.js", "**/*.test.js"],
			"extends": ["plugin:jest/recommended"],
			"rules": {
				"jest/expect-expect": [
					"error",
					{
						"assertFunctionNames": [
							"cy.**.should",
							"cy.checkA11y",
							"expect",
							"request.**.expect"
						]
					}
				]
			}
		}
	]
}
